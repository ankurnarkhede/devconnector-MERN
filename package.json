    "concurrently": "^4.1.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "^4.16.4",
    "gravatar": "^1.8.0",
    "http-errors": "~1.6.2",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.3.16",
    "morgan": "~1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pug": "2.0.0-beta11",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "nodemon": "^1.18.8",
    "pre-commit": "^1.2.2",
    "standard": "^12.0.1"
  },
  "pre-commit": [
    "standard-js"
  ],
  "standard": {
